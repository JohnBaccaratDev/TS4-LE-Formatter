<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:lang="clr-namespace:LE_Formatter.lang"
        xmlns:l10n="clr-namespace:LE_Formatter.Localization"
        xmlns:local="using:LE_Formatter"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LE_Formatter.MainWindow"
        x:DataType="local:MainWindow"
        Title="LE  Formatter"
        DragDrop.AllowDrop="True"
        DragDrop.Drop="DragAndDrop">

    <TabControl Name="MainTabs" TabStripPlacement="Left">
		<TabItem Name="TabLeViewer" Header="{l10n:LocalizationExt TabLeFile}" LayoutUpdated="TabLeViewer_LayoutUpdated">
            <Panel Margin="0" >
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
					
				    <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="{l10n:LocalizationExt LeFileTabDragAndDrop}" IsVisible="{Binding labelDragAndDropVisible}"></Label>
                    
                    <StackPanel HorizontalAlignment="Center" >
                        <Label HorizontalAlignment="Center" Content="{l10n:LocalizationExt LeFileTabLabelButtonOperators}" Padding="0 30 0 10"/>
                        <DockPanel HorizontalAlignment="Center" Margin="0 0 0 0">
					        <Button Click="buttonClickedLoadRecentLes" Content="{l10n:LocalizationExt LeFileTabButtonLoadRecentLes}" Margin="0 0 50 0"/>
					        <Button Click="buttonClickedClearLes" Content="{l10n:LocalizationExt LeFileTabButtonClearLes}"/>
                        </DockPanel>
                    </StackPanel>
                </StackPanel>
                <TabControl  Name="LeFileTabs" IsVisible="False"  FlowDirection="RightToLeft" Padding="0" Margin="0" Theme="{StaticResource NoGapTabs}">
                </TabControl>

            </Panel>
        </TabItem>
		<TabItem Name="TabIndexFiles" Header="{l10n:LocalizationExt TabIndexFiles}">
            <local:PageIndexScripts></local:PageIndexScripts>
        </TabItem>
		<TabItem Name="TabSettings" Header="{l10n:LocalizationExt TabSettings}">
            <local:PageSettings></local:PageSettings>
        </TabItem>
    </TabControl>
</Window>
