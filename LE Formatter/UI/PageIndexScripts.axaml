<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:lang="clr-namespace:LE_Formatter.lang"
             xmlns:l10n="clr-namespace:LE_Formatter.Localization"
             x:Class="LE_Formatter.PageIndexScripts">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
		<StackPanel Margin="10 10 10 0">
            <TextBlock Margin="0 0 0 10" Text="{l10n:LocalizationExt IndexFilesDescription}" TextWrapping="Wrap" />
            <DockPanel LastChildFill="False">
                <Button Name="ButtonReindex" DockPanel.Dock="Left" Content="{l10n:LocalizationExt IndexFilesButton}" Click="reIndexFiles"/>
                <Label VerticalAlignment="Center" DockPanel.Dock="Left" Content="{l10n:LocalizationExt IndexFilesButtonLabel}"/>
            </DockPanel>
            <Separator/>
            <ScrollViewer>
                <StackPanel Name="indexStackPanel"/>
            </ScrollViewer>
        </StackPanel>
    </ScrollViewer>
</UserControl>
